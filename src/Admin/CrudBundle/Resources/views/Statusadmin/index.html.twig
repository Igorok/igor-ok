{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.statusLi').addClass('active');
        })
    </script>
{% endblock script %}

{% block body -%}
    <h1>
        Управление статусами
    </h1>
    <p>
        <a href="{{ path('status_new') }}" class="btn btn-default">
          <span class="glyphicon glyphicon-edit"></span> 
          Добавить статус
        </a>
    </p>
    <p>&nbsp;</p>
    
    <div class="container">
        <div class="row">
            <div class="col-md-1"><strong>Id</strong></div>
            <div class="col-md-2"><strong>Заголовок</strong></div>
            <div class="col-md-2"><strong>Действия</strong></div>
        </div>
        {% for entity in entities %}
        <p>&nbsp;</p>
        <div class="row">
            <div class="col-md-1"><strong><a href="{{ path('status_show', { 'id': entity.id }) }}">{{ entity.id }}</a></strong></div>
            <div class="col-md-2">{{ entity.title }}</div>
            <div class="col-md-2">
                <!-- Single button -->
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Действия <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="{{ path('status_show', { 'id': entity.id }) }}">Показать</a>
                    </li>
                    <li>
                        <a href="{{ path('status_edit', { 'id': entity.id }) }}">Редактировать</a>
                    </li>                  
                    </ul>
                </div>
                <!-- -->
            </div>
        </div>
        
        {% endfor %}
        <p>&nbsp;</p>
    {% endblock %}
