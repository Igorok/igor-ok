{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.statusLi').addClass('active');
        })
    </script>
{% endblock script %}

{% block body -%}
    <p>
        <a href="{{ path('status') }}" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
    </p>    
    <h1>
        Новый статус        
    </h1>

    {#{ form(form) }#}

     <div class="feedback_form">
        
        <form action="{{ path('status',{'id': entity.id}) }}" method="POST" {{ form_enctype(form) }}>

            {{ form_errors(form) }}
            
            <div class="form-group">
             {{ form_label(form.title) }}
             {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
                        
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить статус
            </button>
             
            {{ form_row(form._token) }}
            
         </form>
    </div>
{% endblock %}
