{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.statusLi').addClass('active');
        })
    </script>
{% endblock script %}

{% block body -%}
    <h1>Редактировать проект</h1>

    {#{ form(edit_form) }#}
    <div class="feedback_form">
        
        <form action="{{ path('status_update',{'id': entity.id}) }}" method="POST" {{ form_enctype(edit_form) }}>

            {{ form_errors(edit_form) }}
            <div class="form-group">
             {{ form_label(edit_form.title) }}
             {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
                        
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить статус
            </button>
             
            {{ form_row(edit_form._token) }}
            
         </form>
    </div>
    
    
    <p>
        <!-- Вернуться к списку -->
        <a href="{{ path('status') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
        <!-- Удалить -->
        <form action="{{ path('status_delete',{'id': entity.id}) }}" method="POST" {{ form_enctype(delete_form) }}>
            <input type="hidden" value="DELETE" name="_method">
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </button>
            {{ form_row(delete_form._token) }}
         </form>
    </p>
    <p>&nbsp;</p>
    
{% endblock %}
