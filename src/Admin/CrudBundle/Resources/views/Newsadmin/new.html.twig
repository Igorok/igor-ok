{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.newsLi').addClass('active');
        })
    </script>
{% endblock script %}
    
    
{% block body -%}
    <h1>
        Создать новость
        
    </h1>
    <p>
        <a href="{{ path('news') }}" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
    </p>
    {#{ form(form) }#}
    <div class="feedback_form">
        
        <form action="{{ path('news_create') }}" method="POST" id="contact_form" {{ form_enctype(form) }}>


            {{ form_errors(form) }}
            <div class="form-group">
             {{ form_label(form.title) }}
             {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.news_url) }}
                {{ form_widget(form.news_url, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.meta_keywords) }}
            {{ form_widget(form.meta_keywords, { 'attr': {'class': 'form-control'} }) }}
             </div>
            <div class="form-group">
                {{ form_label(form.meta_description) }}
                 {{ form_widget(form.meta_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.short_description) }}
                 {{ form_widget(form.short_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                 {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group clearfix">
                <p>
                {{ form_label(form.image) }}
                </p>
                {{ form_widget(form.image) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.status_id) }}
                 {{ form_widget(form.status_id, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Создать новость
            </button>
            
             {{ form_row(form._token) }}
            
             <!-- input type="submit" value="Создать" class="btn btn-default" / -->
         </form>
       </div>  
    
        <!-- -->
{% endblock %}
