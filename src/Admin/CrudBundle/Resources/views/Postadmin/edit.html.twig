{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.postLi').addClass('active');
        })
    </script>
{% endblock script %}
    
{% block body -%}
    <h1>Редактировать статью</h1>

    {#{ form(edit_form) }#}
     <div class="feedback_form">
        
        <form action="{{ path('post_update',{'id': entity.id}) }}" method="POST" {{ form_enctype(edit_form) }}>

            {{ form_errors(edit_form) }}
            
            <div class="form-group">
             {{ form_label(edit_form.title) }}
             {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.post_url) }}
                {{ form_widget(edit_form.post_url, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.meta_keywords) }}
            {{ form_widget(edit_form.meta_keywords, { 'attr': {'class': 'form-control'} }) }}
             </div>
            <div class="form-group">
                {{ form_label(edit_form.meta_description) }}
                 {{ form_widget(edit_form.meta_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.short_description) }}
                 {{ form_widget(edit_form.short_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description) }}
                 {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group clearfix">
                <p>
                {{ form_label(edit_form.image) }}
                </p>    
                 {{ form_widget(edit_form.image) }}
            </div>
            
            <div class="form-group">
                {{ form_label(edit_form.status_id) }}
                 {{ form_widget(edit_form.status_id, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить статью
            </button>
             
            {{ form_row(edit_form._token) }}
            
         </form>
       </div> 
   
    
    
    
    
    
    
    
    <p>
        <!-- Вернуться к списку -->
        <a href="{{ path('post') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
        <!-- Удалить -->
        <form action="{{ path('post_delete',{'id': entity.id}) }}" method="POST" {{ form_enctype(delete_form) }}>
            <input type="hidden" value="DELETE" name="_method">
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </button>
            {{ form_row(delete_form._token) }}
         </form>
    </p>
    <p>&nbsp;</p>
{% endblock %}
