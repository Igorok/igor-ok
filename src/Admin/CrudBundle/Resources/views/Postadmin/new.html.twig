{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.postLi').addClass('active');
        })
    </script>
{% endblock script %}
    
    
{% block body -%}
    <p>
        <a href="{{ path('post') }}" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
    </p>    
    <h1>
        Новая статья        
    </h1>

    {#{ form(form) }#}


    <div class="feedback_form">
        
        <form action="{{ path('post_create') }}" method="POST" id="contact_form" {{ form_enctype(form) }}>

            {{ form_errors(form) }}
            <div class="form-group">
             {{ form_label(form.title) }}
             {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.post_url) }}
                {{ form_widget(form.post_url, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.meta_keywords) }}
            {{ form_widget(form.meta_keywords, { 'attr': {'class': 'form-control'} }) }}
             </div>
            <div class="form-group">
                {{ form_label(form.meta_description) }}
                 {{ form_widget(form.meta_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.short_description) }}
                 {{ form_widget(form.short_description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                 {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                 {{ form_widget(form.image) }}
            </div>
            
            <div class="form-group">
                <p>
                {{ form_label(form.status_id) }}</p>
                 {{ form_widget(form.status_id, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
             
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Создать статью
            </button>
             <!-- input type="submit" value="Создать" class="btn btn-default" / -->
             
             {{ form_row(form._token) }}
         </form>
       </div>  



{% endblock %}
