{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.commentLi').addClass('active');
        })
    </script>
{% endblock script %}
    
{% block body -%}
    <h1>Редактировать комментарий</h1>

    {#{ form(edit_form) }#}
     <div class="feedback_form">
        
        <form action="{{ path('comments_update',{'id': entity.id}) }}" method="POST" {{ form_enctype(edit_form) }}>

            {{ form_errors(edit_form) }}
            
            <div class="form-group">
             {{ form_label(edit_form.name) }}
             {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.email) }}
                {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description) }}
            {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
             </div>
            <div class="form-group">
                {{ form_label(edit_form.post_id) }}
                 {{ form_widget(edit_form.post_id, { 'attr': {'class': 'form-control'} }) }}
            </div>
                        
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить комментарий
            </button>
             
            {{ form_row(edit_form._token) }}
            
         </form>
       </div> 
   
    
    
    
    
    
    
    
    <p>
        <!-- Вернуться к списку -->
        <a href="{{ path('comments') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
        <!-- Удалить -->
        <form action="{{ path('comments_delete',{'id': entity.id}) }}" method="POST" {{ form_enctype(delete_form) }}>
            
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </button>
            {{ form_row(delete_form._token) }}
         </form>
    </p>
    <p>&nbsp;</p>
{% endblock %}
