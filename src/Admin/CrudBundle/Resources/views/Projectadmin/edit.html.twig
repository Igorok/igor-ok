{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.projectLi').addClass('active');
        })
    </script>
{% endblock script %}
    
    
{% block body -%}
    <h1>Редактировать проект</h1>

    {#{ form(edit_form) }#}
    <div class="feedback_form">
        
        <form action="{{ path('project_update',{'id': entity.id}) }}" method="POST" {{ form_enctype(edit_form) }}>

            {{ form_errors(edit_form) }}
            
            <div class="form-group">
             {{ form_label(edit_form.title) }}
             {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.description) }}
                 {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <div class="form-group">
                {{ form_label(edit_form.link) }}
                 {{ form_widget(edit_form.link, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <div class="form-group clearfix">
                <p>
                {{ form_label(edit_form.image) }}
                </p>    
                 {{ form_widget(edit_form.image) }}
            </div>
                        
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить проект
            </button>
             
            {{ form_row(edit_form._token) }}
            
         </form>
    </div>
    
    
    <p>
        <!-- Вернуться к списку -->
        <a href="{{ path('project') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
        <!-- Удалить -->
        <form action="{{ path('project_delete',{'id': entity.id}) }}" method="POST" {{ form_enctype(delete_form) }}>
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-remove"></span> Удалить
            </button>
            {{ form_row(delete_form._token) }}
         </form>
    </p>
    <p>&nbsp;</p>
    
{% endblock %}
