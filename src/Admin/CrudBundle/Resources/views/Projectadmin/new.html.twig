{% extends 'AdminCrudBundle::layout.html.twig' %}
{% block script %}
    <script>
        $(function(){
            $('.adminMenu > li').removeClass('active');
            $('.projectLi').addClass('active');
        })
    </script>
{% endblock script %}
    
    
{% block body -%}
    <p>
        <a href="{{ path('project') }}" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-left"></span> Вернуться к списку
        </a>
    </p>    
    <h1>
        Новый проект        
    </h1>

    {#{ form(form) }#}

     <div class="feedback_form">
        
        <form action="{{ path('project',{'id': entity.id}) }}" method="POST" {{ form_enctype(form) }}>

            {{ form_errors(form) }}
            
            <div class="form-group">
             {{ form_label(form.title) }}
             {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                 {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.link) }}
                 {{ form_widget(form.link, { 'attr': {'class': 'form-control'} }) }}
            </div>
            
            <div class="form-group clearfix">
                <p>
                {{ form_label(form.image) }}
                </p>    
                 {{ form_widget(form.image) }}
            </div>
                        
            <button type="submit" id="form_submit" name="form[submit]" class="btn btn-default">
                <span class="glyphicon glyphicon-check"></span> Сохранить проект
            </button>
             
            {{ form_row(form._token) }}
            
         </form>
    </div>
{% endblock %}
